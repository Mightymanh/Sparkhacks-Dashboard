---
import Layout from "../layouts/Layout.astro";
import { app } from "../firebase/server";
import { getAuth } from "firebase-admin/auth";

const auth = getAuth(app)
if (!Astro.cookies.has("__session")) {
    return Astro.redirect("/")
}
const sessionCookie = Astro.cookies.get("__session").value
const decodedCookie = await auth.verifySessionCookie(sessionCookie)
const user = await auth.getUser(decodedCookie.uid)

if (!user) {
    return Astro.redirect("/")
}

---

<Layout>
    <main id="dashboard">
        <nav>
            <h1>Dashboard</h1>
            <button id="signout-button">Sign out</button> 
        </nav>
        <main id="dashboard-main">
            <h1>Welcome {user.email}</h1>
            <section class="dashboard-result" style="display: none">
                Result of application:
            </section>
            <section class="dashboard-app">
                <h3>Application to SparkHacks</h3>
                <button id="app-btn">Start application</button>
            </section>
        </main>
        <footer>Made by SparkHacks with ðŸ©µ</footer>
    </main>
    <script>
        const signoutBtn = document.getElementById("signout-button") as HTMLButtonElement
        signoutBtn.addEventListener("click", async () => {
            try {
                const res = await fetch("/api/auth/signout")
                if (!res.ok) {
                    alert("response not okay")
                    return
                }
                return window.location.assign("/")
            }
            catch (err) {
                alert("cannot sign out")
                console.log(err)
            }
        })
    </script>
</Layout>
